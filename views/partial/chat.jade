.container-fluid
	#messages.row
		.col-md-offset-3.col-md-6.view-animate-container.bg-info(ng-repeat="msg in msgs | orderBy: postedAt" ng-class="{me: msg.author == $root.my_username}" on-msg-render)
			h4
				img.img-circle(src='/user/picture/{{msg.author}}' style="width: 20px; height: 20px; margin-right: 5px; vertical-align: middle;")
				| {{msg.author}}
				//({{msg.senderStatus}})
				//small.pull-right {{msg.location}}, {{msg.postedAt}}
				small.pull-right {{msg.postedAt_s}}
			p {{msg.content}}
	div.row
		form.msg_input(action="" autocomplete="off")
			.col-md-offset-3.col-md-6
				input#msg_target(type="hidden" name="target" value="{{target}}")
				input#m.form-control(placeholder="Write a message ...")
